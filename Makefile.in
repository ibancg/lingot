PROJECT = lingot
EXECS	= $(PROJECT)
SRC     = src/*.cc src/core/*.cc src/gui/*.cc

DEFINES   = #-DOSS -DLIBSNDOBJ #-DLIB_FFTW
INCDIR    = `pkg-config --cflags gtk+-2.0` -Isrc/core -Isrc/gui -Isrc
C_FLAGS   = -g -Wall $(DEFINES) $(INCDIR)
LIBS      = `pkg-config --libs gtk+-2.0` -lstdc++ -lpthread -lm #-lsndobj #-lfftw

SRCS = $(wildcard $(SRC))
OBJS = $(SRCS:.cc=.o)

CXX       = @CXX@
CXXLINKER = @CXX@
CFLAGS  = @CFLAGS@ @DEFS@ $(INCLUDE_DIR) $(C_FLAGS)
LDFLAGS = @LDFLAGS@ @LIBS@


all: $(PROJECT)

$(PROJECT): .depend $(OBJS)
	$(CXX) -o $(PROJECT) $(OBJS) $(LIBS)

%.o: %.cc .depend
	$(CXX) $(C_FLAGS) -c $< -o $@

install: $(PROJECT)
	install -d @prefix@
	install -d @prefix@/bin
	install $(PROJECT) @prefix@/bin

distclean: clean

clean:
	find -type f -path '*.o' | xargs rm -f
	/bin/rm -f *~ .depend $(EXECS)

.PHONY: all run clean

.DEFAULT:
	g++ $(INCDIR) -M $(SRCS) > .depend

sinclude .depend
